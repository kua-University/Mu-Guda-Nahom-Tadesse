<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid Background Color -->
    <item>
        <shape>
            <solid android:color="#F5F5F5" /> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Optional: Gradient Overlay -->
    <item>
        <shape>
            <gradient
                android:startColor="#2478B6"
                android:endColor="#B33D3D"
                android:angle="45" />
        </shape>
    </item>
</layer-list>