<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/paymentMethodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="perforable Methods "
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/telebirrButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/telebirr_background"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/chappaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/chappa_background"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/santimPayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/santim_pay_background"
        android:textColor="@android:color/white" />

</LinearLayout>